<%= render 'shared/content_title', title: 'New Category' %>

<% if @category.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span6'>
      <ul>
      <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
      <%= f.submit 'Create category', class: 'btn btn-success' %>
  <% end %>
</div>
